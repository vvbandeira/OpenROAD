#!/usr/bin/make -f

include /usr/share/dpkg/default.mk

export DH_VERBOSE = 1

# Disable lto optimization due to issues with GUI
export DEB_BUILD_MAINT_OPTIONS=optimize=-lto

%:
	dh $@

override_dh_dwz:

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_DEPS=ON \
		-DBUILD_PYTHON=ON
